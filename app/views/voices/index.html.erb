<h1>Voices</h1>


<%= link_to 'New Voice', new_voice_path, class: 'btn btn-primary pull-right' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @voices.each_with_index do |voice, i| %>
      <tr id="<%= "voice" + i.to_s %>">
        <td><%= voice.line %></td>
        <td class="audio"><%= audio_tag(voice.voice_file,
                          autoplay: false,
                          controls: true,
                          loop: false,
                          id: "audio" + i.to_s) %>
        </td>
        <td><%= link_to 'Edit', edit_voice_path(voice) %></td>
        <td><%= link_to 'delete', voice, method: :delete, class: 'btn btn-danger', confirm: 'Are you OK?' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= javascript_include_tag 'voice/index' %>

